---
import ArrowUpIcon from "~icons/ri/arrow-up-line";
---

<script>
	const scrollToTop: HTMLElement = document.querySelector("#scroll-to-top")!;
	window.addEventListener("DOMContentLoaded", () => {
		if (window.scrollY >= 100) {
			scrollToTop.style.display = "flex";
		}
	});
	window.addEventListener("scroll", () => {
		if (window.scrollY >= 100) {
			scrollToTop.style.display = "flex";
		} else {
			scrollToTop.style.display = "none";
		}
	});
</script>

<a
	id="scroll-to-top"
	href="#top"
	class="decoration-none color-inherit fixed bottom-8 right-8 w-8 h-8 hidden justify-center items-center cursor-pointer rd-2 opacity-50 hover:opacity-100 focus-visible:opacity-100 transition-opacity-400"
	data-trail-cursor
>
	<ArrowUpIcon />
</a>
