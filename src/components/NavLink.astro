---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
	icon?: string;
}

const { class: className, icon, ...props } = Astro.props;
---

<a
	class={`decoration-none gap-1 rd-2 flex items-center
            transition-opacity-400 opacity-60 hover:opacity-100 ${className ?? ""}`}
	{...props}
>
	<span class={icon}></span>
	<span class="lt-md:hidden"> <slot /> </span>
</a>
