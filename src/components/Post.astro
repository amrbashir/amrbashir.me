---
import Button from "./Button.astro";

interface Props {
	slug: string;
	title: string;
	pubDate: Date | string;
	readTime: number;
	updated?: Date | string;
}

const { slug, title, pubDate, readTime } = Astro.props;

const date = new Date(pubDate);
const dateNoYear = date.toLocaleDateString("en-us", {
	month: "long",
	day: "numeric",
});
const fullDate = date.toLocaleDateString("en-us", {
	year: "numeric",
	month: "long",
	day: "numeric",
});
---

<li>
	<a
		href={`/posts/${slug}/`}
		{title}
		class="opacity-60 hover:opacity-100 transition-opacity-300 flex flex-col md:flex-row my-2 md:gap-4 md:items-center"
	>
		<span class="color-dark dark:color-light">{title}</span>

		<time class="text-sm text-nowrap opacity-60" datetime={fullDate}>
			{dateNoYear}
			{"Â·"}
			{readTime} min
		</time>
	</a>
</li>
