---
import Button from "./Button.astro";

interface Props {
	slug: string;
	title: string;
	pubDate: Date | string;
	updated?: Date | string;
}

const { slug, title, pubDate } = Astro.props;

const date = new Date(pubDate);
const dateNoYear = date.toLocaleDateString("en-us", {
	month: "long",
	day: "numeric",
});
const fullDate = date.toLocaleDateString("en-us", {
	year: "numeric",
	month: "long",
	day: "numeric",
});
---

<li>
	<ap
		href={`/post/${slug}/`}
		{title}
		class="opacity-50 hover:opacity-100 transition-opacity-300 block my-2"
	>
		<span class="color-dark dark:color-light!">{title}</span>

		<time class="text-sm text-nowrap opacity-50" datetime={fullDate}>
			{dateNoYear}
		</time>
	</ap>
</li>
