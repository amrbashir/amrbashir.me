---
import Logo from "./Logo.astro";
import DarkModeToggle from "./DarkModeToggle.astro";
import Socials from "./Socials.astro";
---

<nav class="w-full h-full px-7 overflow-hidden flex justify-between">
	<ul class="flex items-center">
		<a
			id="skip-to-main-content"
			href="#main-content"
			aria-label="Home"
			data-no-trail-cursor
			class="bg-accent color-current decoration-none z-999 rd-rb-2 p-8 absolute top--40 left-0 focus:top-0 transition-top-400 rd-"
		>
			<span class="color-dark"> Skip to main content </span>
		</a>

		<a href="/" title="Home" class="btn-link">
			<Logo />
		</a>
	</ul>

	<ul class="flex items-center gap-4">
		<a href="/projects" title="Projects" class="btn-link">
			<span class="i-ri-lightbulb-line inline-block"></span>
			<span class="hidden sm:inline"> Projects </span>
		</a>

		<Socials />

		<DarkModeToggle />
	</ul>
</nav>
