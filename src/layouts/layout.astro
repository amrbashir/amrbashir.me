<style is:global>
	:root {
		--color: #050505;
		--bg-color: white;
	}
	html.dark {
		--color: rgb(229, 231, 235);
		--bg-color: #050505;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		height: 100vh;
		width: 100vw;
		font-family:
			Inter,
			ui-sans-serif,
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			Segoe UI,
			Roboto,
			Helvetica Neue,
			Arial,
			Noto Sans,
			sans-serif,
			"Apple Color Emoji",
			"Segoe UI Emoji",
			Segoe UI Symbol,
			"Noto Color Emoji";
	}

	body {
		height: 100%;
		width: 100%;
		color: var(--color);
		background-color: var(--bg-color);
	}
</style>
