			"Noto Color Emoji";
	}

	html::before {
		content: "";
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		position: fixed;
		z-index: -999;
		background-color: rgb(var(--bg-color-light));
	}

	html::after {
		content: "";
		position: fixed;
		bottom: 0;
		right: 0;
		width: 100%;
		height: 100%;
		opacity: 0.5;
		z-index: -998;
		background-image: radial-gradient(
			circle at 150% 150%,
			rgba(var(--bg-color-inverse), 1) 0%,
			rgba(var(--bg-color-inverse), 0.75) 25%,
			rgba(var(--bg-color-inverse), 0.5) 50%,
			rgba(var(--bg-color-inverse), 0) 75%
		);
	}

	html.dark::after {
		opacity: 0.3;
	}

